<h1> Select you favorite players </h1>
<form method="POST" action="/favorites">
    <div>
        <span>Player</span>
        {{!-- name in select is the body field name --}}
        <select name="player1">
            <option>Select player</option>
            {{#each players}}
            <option>{{this.first_name}} {{this.last_name}}</option>
            {{/each}}
        </select>
    </div>
    <div>
        <button>Submit</button>
    </div>
</form>