<h1> Add Comparisons:</h1>

<h2>Player Comparisons:</h2>
<form method="POST" action="/compare">
    <div>
       <em>
           Select Players to Compare!
       </em> 
        <br> </br>
        <span>Player 1</span>
        {{!-- name in select is the body field name --}}
        <select name="player1">
            <option>Select player 1</option>
            {{#each players}}
            <option>{{this.first_name}} {{this.last_name}}</option>
            {{/each}}
        </select>
    </div>
    <div class="playerselection">
        <span>Player 2</span>
        <select name="player2">
            <option>Select player 2</option>
            {{#each players}}
            <option>{{this.first_name}} {{this.last_name}}</option>
            {{/each}}
        </select>
    </div>
    <div class="submitbutton">
        <button>Submit</button>
    </div>
</form>

